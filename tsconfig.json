{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "declaration": true,
    "module": "CommonJS",
    "isolatedModules": true,
    "esModuleInterop": true,
    "newLine": "lf",
  },
  "include": [ "src" ]
}
